@model ProyectoWebCommercialLopez.Models.Person

@{
    ViewData["Title"] = "Eliminar Persona";
}

<div class="max-w-xl mx-auto mt-16 bg-white border shadow-lg rounded-2xl p-8">

    <!-- Icono y título -->
    <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 flex items-center justify-center bg-red-100 text-red-600 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L4.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-800">¿Eliminar Persona?</h2>
    </div>

    <p class="text-gray-600 mb-6">
        Esta acción no se puede deshacer. Confirme si desea eliminar este registro.
    </p>

    <!-- Datos resumidos -->
    <div class="bg-gray-50 border rounded-xl p-4 mb-6">
        <p class="text-gray-700"><span class="font-semibold">Nombre:</span> @Model.Name</p>
        <p class="text-gray-700"><span class="font-semibold">Apellido:</span> @Model.LastName</p>
        <p class="text-gray-700"><span class="font-semibold">Email:</span> @Model.Email</p>
        <p class="text-gray-700"><span class="font-semibold">Teléfono:</span> @Model.Phone</p>
    </div>

    <!-- Formulario de eliminación -->
    <form asp-action="Delete" method="post" class="flex justify-end gap-4">
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index"
           class="px-5 py-2 rounded-lg bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition">
            Cancelar
        </a>

        <button type="submit"
                class="px-5 py-2 rounded-lg bg-red-600 text-white font-semibold hover:bg-red-700 transition">
            Eliminar
        </button>
    </form>

</div>
