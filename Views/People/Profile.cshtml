@model ProyectoWebCommercialLopez.Models.Person
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-2xl mt-12 overflow-hidden">

    <!-- Header -->
    <div class="bg-gradient-to-r from-orange-500 to-orange-600 p-8 text-center text-white">
        <i class="bi bi-person-circle text-6xl mb-3"></i>
        <h2 class="text-3xl font-bold tracking-wide">My Profile</h2>
        <p class="text-white/80 mt-1 text-sm">@Model.Email</p>
    </div>

    <!-- Body -->
    <div class="p-8 space-y-6">

        <!-- SECTION BOX -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Name -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-person"></i> Name
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.Name
                </p>
            </div>

            <!-- Last Name -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-person-lines-fill"></i> Last Name
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.LastName
                </p>
            </div>

            <!-- CI -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-credit-card-2-front"></i> CI
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.CI
                </p>
            </div>

            <!-- Phone -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-telephone"></i> Phone
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.Phone
                </p>
            </div>

            <!-- Email -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.Email
                </p>
            </div>

            <!-- Address -->
            <div>
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-geo-alt"></i> Address
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800">
                    @Model.Address
                </p>
            </div>

            <!-- Role -->
            <div class="col-span-full">
                <label class="text-gray-500 text-sm flex items-center gap-2">
                    <i class="bi bi-shield-lock"></i> Role
                </label>
                <p class="mt-1 p-3 bg-gray-100 rounded-lg border text-gray-800 font-semibold">

                    @{
                        string roleName = Model.User?.Role switch
                        {
                            1 => "Admin",
                            2 => "Cashier",
                            3 => "Almacen",
                            _ => "Unknown"
                        };
                    }

                    @roleName
                </p>
            </div>

        </div>

        <!-- Divider -->
        <hr class="my-6 border-gray-200" />

        <!-- Back Button -->
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index"
               class="inline-flex items-center gap-2 px-5 py-2.5 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-medium">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
