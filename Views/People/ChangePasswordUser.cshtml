@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="max-w-md mx-auto bg-white p-6 rounded-xl shadow-md mt-12">

    <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">
        Cambiar Contraseña
    </h2>

    @if (ViewBag.Error != null)
    {
        <p class="text-red-600 mb-3 text-center">@ViewBag.Error</p>
    }

    @if (ViewBag.Success != null)
    {
        <p class="text-green-600 mb-3 text-center">@ViewBag.Success</p>
    }

    <form method="post" id="changePasswordForm" class="space-y-4">

        <!-- Password actual -->
        <div>
            <label class="font-medium">Contraseña Actual</label>
            <input type="password" name="currentPassword" class="w-full border rounded p-2" required />
        </div>

        <!-- Nueva contraseña -->
        <div>
            <label class="font-medium">Nueva Contraseña</label>
            <input type="password" id="newPassword" name="newPassword"
                   class="w-full border rounded p-2" required />
            <span id="passwordError" class="text-red-600 text-sm"></span>
        </div>

        <!-- Confirmar nueva contraseña -->
        <div>
            <label class="font-medium">Confirmar Contraseña</label>
            <input type="password" id="confirmPassword" name="confirmPassword"
                   class="w-full border rounded p-2" required />
            <span id="confirmError" class="text-red-600 text-sm"></span>
        </div>

        <!-- BOTONES -->
        <div class="flex justify-between items-center mt-5">

            <!-- Volver -->
            <a asp-controller="People" asp-action="Index"
               class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">
                ← Volver
            </a>

            <!-- Guardar -->
            <button type="submit"
                    class="px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                Guardar Contraseña
            </button>

        </div>

    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/scripts/authjs/change-password-validation.js"></script>
}
