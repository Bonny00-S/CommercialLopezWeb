@model ProyectoWebCommercialLopez.Models.WareHouse

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Create Warehouse</h1>

<div class="max-w-lg bg-white p-6 rounded-xl shadow border border-gray-200">

    <form asp-action="Create" class="space-y-5">

        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <!-- Name -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>

            <input asp-for="Name"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2
                          focus:ring-orange-500 focus:outline-none" />

            <span id="nameError" class="text-red-600 text-sm"></span>
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <!-- Submit -->
        <div class="flex justify-end">
            <button type="submit"
                    class="px-5 py-2 bg-orange-500 text-white rounded-lg shadow
                           hover:bg-orange-600 transition">
                Create
            </button>
        </div>

    </form>
</div>

<div class="mt-4">
    <a asp-action="Index"
       class="px-4 py-2 bg-gray-700 text-white rounded-lg shadow hover:bg-gray-800 transition">
        Back to List
    </a>
</div>

@section Scripts {
    <script src="~/scripts/WareHousejs/warehouse-validation.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
