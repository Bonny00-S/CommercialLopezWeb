@model IEnumerable<ProyectoWebCommercialLopez.Models.WareHouse>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Warehouses</h1>

<div class="mb-4">
    <a asp-action="Create"
       class="px-4 py-2 bg-orange-500 text-white rounded-lg shadow hover:bg-orange-600 transition">
        Create New
    </a>
</div>

<div class="bg-white p-4 rounded-xl shadow border border-gray-200 overflow-x-auto">
    <table class="min-w-full text-left">
        <thead>
            <tr class="border-b bg-gray-100">
                <th class="py-2 px-3 font-semibold text-gray-700">Name</th>
                <th class="py-2 px-3 font-semibold text-gray-700">Created At</th>
                <th class="py-2 px-3 font-semibold text-gray-700">Modified At</th>
                <th class="py-2 px-3"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-2 px-3">@item.Name</td>
                    <td class="py-2 px-3">@item.CreatedAt</td>
                    <td class="py-2 px-3">@item.ModifiedAt</td>

                    <td class="py-2 px-3 flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="px-3 py-1 bg-yellow-500 text-white rounded-md text-sm hover:bg-yellow-600 transition">
                            Edit
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="px-3 py-1 bg-blue-500 text-white rounded-md text-sm hover:bg-blue-600 transition">
                            Details
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="px-3 py-1 bg-red-600 text-white rounded-md text-sm hover:bg-red-700 transition">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
