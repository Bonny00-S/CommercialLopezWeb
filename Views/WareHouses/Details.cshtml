@model ProyectoWebCommercialLopez.Models.WareHouse

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Warehouse Details</h1>

<div class="max-w-2xl bg-white p-6 rounded-xl shadow border border-gray-200">

    <h4 class="text-xl font-semibold text-gray-700 mb-4">Information</h4>
    <hr class="mb-4" />

    <dl class="grid grid-cols-3 gap-y-4">

        <dt class="font-semibold text-gray-700">Name</dt>
        <dd class="col-span-2 text-gray-800">@Model.Name</dd>

        <dt class="font-semibold text-gray-700">Created At</dt>
        <dd class="col-span-2 text-gray-800">@Model.CreatedAt</dd>

        <dt class="font-semibold text-gray-700">Modified At</dt>
        <dd class="col-span-2 text-gray-800">@Model.ModifiedAt</dd>

    </dl>
</div>

<div class="mt-4 flex gap-3">

    <a asp-action="Edit" asp-route-id="@Model?.Id"
       class="px-4 py-2 bg-orange-500 text-white rounded-lg shadow hover:bg-orange-600 transition">
        Edit
    </a>

    <a asp-action="Index"
       class="px-4 py-2 bg-gray-700 text-white rounded-lg shadow hover:bg-gray-800 transition">
        Back to List
    </a>
</div>
