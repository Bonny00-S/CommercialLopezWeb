@model ProyectoWebCommercialLopez.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<h1 class="text-2xl font-bold mb-4 text-red-600">Delete Client</h1>

<div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
    <h3 class="text-xl font-semibold text-red-800 mb-4">⚠️ Are you sure you want to delete this client?</h3>
    <p class="text-gray-700">This action cannot be undone.</p>
</div>

<div class="bg-white shadow rounded-lg p-6 max-w-3xl">
    
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        
        <div class="border-b pb-3">
            <dt class="text-sm font-semibold text-gray-600">@Html.DisplayNameFor(model => model.DocumentNumber)</dt>
            <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.DocumentNumber)</dd>
        </div>

        <div class="border-b pb-3">
            <dt class="text-sm font-semibold text-gray-600">@Html.DisplayNameFor(model => model.CompanyName)</dt>
            <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.CompanyName)</dd>
        </div>

        <div class="border-b pb-3">
            <dt class="text-sm font-semibold text-gray-600">@Html.DisplayNameFor(model => model.Phone)</dt>
            <dd class="mt-1 text-lg text-gray-900">@(Model?.Phone ?? "Not provided")</dd>
        </div>

       

        <div class="border-b pb-3 md:col-span-2">
            <dt class="text-sm font-semibold text-gray-600">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="mt-1 text-lg text-gray-900">@(Model?.Address ?? "Not provided")</dd>
        </div>

    </dl>

</div>

<form asp-action="Delete" method="post" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <div class="flex gap-3">
        <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded hover:bg-red-700 font-semibold">
            Confirm Deletion
        </button>
        <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600 inline-block">
            Cancel
        </a>
    </div>
</form>

