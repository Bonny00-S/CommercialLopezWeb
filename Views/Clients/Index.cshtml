@model IEnumerable<ProyectoWebCommercialLopez.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="text-3xl font-bold text-gray-900 mb-6">Clientes</h1>

<div class="mb-4">
    <a asp-action="Create" asp-controller="Clients"
       class="bg-orange-500 hover:bg-orange-400 text-white px-5 py-2 rounded shadow transition font-semibold">
        + Registrar Nuevo Cliente
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        @TempData["SuccessMessage"]
    </div>
}

<div class="overflow-hidden rounded border border-gray-300 shadow">
    <table class="min-w-full text-left">
        <thead class="bg-gray-100 border-b border-gray-300">
            <tr>
                <th class="px-6 py-3 font-semibold text-gray-900">CI/NIT</th>
                <th class="px-6 py-3 font-semibold text-gray-900">Razón Social</th>
                <th class="px-6 py-3 font-semibold text-gray-900">Teléfono</th>
                <th class="px-6 py-3 font-semibold text-gray-900">Dirección</th>
                <th class="px-6 py-3 font-semibold text-gray-900 text-center">Estado</th>
                <th class="px-6 py-3 font-semibold text-gray-900 text-center">Acciones</th>
            </tr>
        </thead>

        <tbody class="divide-y divide-gray-300">
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">@item.DocumentNumber</td>
                        <td class="px-6 py-4">@item.CompanyName</td>
                        <td class="px-6 py-4">@(item.Phone ?? "-")</td>
                      
                        <td class="px-6 py-4">@(item.Address ?? "-")</td>
                        <td class="px-6 py-4 text-center">
                            @if (item.State == 1)
                            {
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">Activo</span>
                            }
                            else
                            {
                                <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold">Inactivo</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-center space-x-3">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="text-orange-500 hover:text-orange-400 font-semibold">
                                Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="text-gray-700 hover:text-gray-900 font-semibold">
                                Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="text-red-600 hover:text-red-700 font-semibold">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                        No hay clientes registrados. <a asp-action="Create" class="text-orange-500 font-semibold">Registrar el primero</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

