@model ProyectoWebCommercialLopez.Models.Client

@{
    ViewData["Title"] = "Registrar Cliente";
}

<h1 class="text-2xl font-bold mb-4">Registrar Nuevo Cliente</h1>

<div class="max-w-4xl bg-white p-6 rounded-xl shadow border border-gray-200">
    <form asp-action="Create" method="post" class="space-y-6">

        <!-- GRID DE 2 COLUMNAS -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- CI/NIT -->
            <div>
                <label asp-for="DocumentNumber" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                <input asp-for="DocumentNumber" 
                       id="DocumentNumber"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg" 
                       placeholder="Ej: 12345678"
                       maxlength="15" />
                <div id="documentNumberError" class="text-red-600 text-sm mt-1"></div>
                <span asp-validation-for="DocumentNumber" class="text-red-600 text-sm mt-1"></span>
            </div>

            <!-- Razón Social -->
            <div>
                <label asp-for="CompanyName" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                <input asp-for="CompanyName" 
                       id="CompanyName"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg" 
                       placeholder="Ej: Comercial Lopez S.R.L."
                       maxlength="200" />
                <div id="companyNameError" class="text-red-600 text-sm mt-1"></div>
                <span asp-validation-for="CompanyName" class="text-red-600 text-sm mt-1"></span>
            </div>

            <!-- Teléfono -->
            <div>
                <label asp-for="Phone" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                <input asp-for="Phone" 
                       id="Phone"
                       type="tel"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg" 
                       placeholder="Ej: 70123456 o +591 70123456"
                       maxlength="20" />
                <div id="phoneError" class="text-red-600 text-sm mt-1"></div>
                <span asp-validation-for="Phone" class="text-red-600 text-sm mt-1"></span>
            </div>

            <!-- Estado (oculto, siempre activo al crear) -->
            <input asp-for="State" type="hidden" value="1" />

            <!-- Dirección (Ocupar toda la fila) -->
            <div class="md:col-span-2">
                <label asp-for="Address" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                <textarea asp-for="Address" 
                          id="Address"
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg" 
                          placeholder="Ej: Av. Principal #123, Zona Centro" 
                          rows="2"
                          maxlength="200"></textarea>
                <div id="addressError" class="text-red-600 text-sm mt-1"></div>
                <span asp-validation-for="Address" class="text-red-600 text-sm mt-1"></span>
            </div>

        </div>

        <!-- BOTONES -->
        <div class="flex justify-between mt-4">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800">← Volver</a>
            <button type="submit" class="px-5 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                Guardar Cliente
            </button>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/scripts/clientjs/client-validations.js"></script>
}

