@model ProyectoWebCommercialLopez.Models.Category

@{
    ViewData["Title"] = "Crear Categoría";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Crear Categoría</h1>

<div class="max-w-lg bg-white p-6 rounded-xl shadow border border-gray-200">
    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <!-- Nombre -->
        <div>
            <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Name"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <!-- Descripción -->
        <div>
            <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Description"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <!-- Botones -->
        <div class="flex items-center justify-between">
            <a asp-action="Index"
               class="text-gray-600 hover:text-gray-800 transition">
                ← Volver
            </a>

            <button type="submit"
                    class="px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
                Crear
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
