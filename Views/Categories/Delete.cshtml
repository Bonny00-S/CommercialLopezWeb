@model ProyectoWebCommercialLopez.Models.Category

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1 class="text-3xl font-bold text-red-600 mb-2">Eliminar Categoría</h1>
<p class="text-gray-700 mb-6">¿Estás seguro de que deseas eliminar esta categoría?</p>

<div class="max-w-xl bg-white p-6 rounded-xl shadow border border-gray-200">
    <dl class="divide-y divide-gray-200">

        <div class="py-4">
            <dt class="text-sm font-semibold text-gray-700">Nombre</dt>
            <dd class="mt-1 text-gray-900">@Model.Name</dd>
        </div>

        <div class="py-4">
            <dt class="text-sm font-semibold text-gray-700">Descripción</dt>
            <dd class="mt-1 text-gray-900">@Model.Description</dd>
        </div>

    </dl>

    <form asp-action="Delete" class="mt-6 flex items-center justify-between">
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index"
           class="text-gray-600 hover:text-gray-800 transition">
            ← Volver
        </a>

        <button type="submit"
                class="px-5 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition">
            Eliminar
        </button>
    </form>
</div>
