@model ProyectoWebCommercialLopez.Models.Sale

@{
    ViewData["Title"] = "Anular Venta";
}

<div class="container mx-auto px-4 py-6 max-w-4xl">
    <h1 class="text-3xl font-bold text-red-600 mb-6">Anular Venta #@Model.Id</h1>

    <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-lg font-semibold text-red-800">¿Está seguro que desea anular esta venta?</h3>
                <p class="mt-2 text-sm text-red-700">
                    Esta acción no se puede deshacer. Al anular la venta, se restaurará el stock de los productos vendidos.
                </p>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow mb-6">
        <h2 class="text-xl font-semibold mb-4">Información de la Venta</h2>
        
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <dt class="text-sm text-gray-600">Fecha de Venta</dt>
                <dd class="font-semibold">@Model.SaleDate.ToString("dd/MM/yyyy HH:mm")</dd>
            </div>

            <div>
                <dt class="text-sm text-gray-600">Cliente</dt>
                <dd class="font-semibold">@Model.Client?.CompanyName</dd>
            </div>

            <div>
                <dt class="text-sm text-gray-600">Tipo de Pago</dt>
                <dd class="font-semibold">@Model.PaymentType</dd>
            </div>

            <div>
                <dt class="text-sm text-gray-600">Total</dt>
                <dd class="font-bold text-green-600 text-xl">Bs. @Model.Total.ToString("N2")</dd>
            </div>
        </dl>
    </div>

    <div class="bg-white p-6 rounded-xl shadow mb-6">
        <h2 class="text-xl font-semibold mb-4">Productos a Restaurar</h2>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Producto</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Cantidad</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var detail in Model.SaleDetails)
                    {
                        <tr>
                            <td class="px-4 py-3 text-sm font-medium text-gray-900">
                                @detail.Product?.Description
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-500 text-center">
                                +@detail.Quantity unidades
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="flex justify-between items-center">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800">← Cancelar</a>
            
            <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold">
                Confirmar Anulación
            </button>
        </div>
    </form>
</div>
