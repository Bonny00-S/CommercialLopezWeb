@{
    ViewData["Title"] = "New Sale";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Register New Sale</h1>

<!-- User Information -->
<div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
    </svg>
    <span class="text-sm text-blue-800">
        <strong>Issued By:</strong> @ViewBag.UserName
    </span>
</div>

<div class="bg-white p-6 rounded-xl shadow border border-gray-200">
    <form id="saleForm" class="space-y-6">
        @Html.AntiForgeryToken()

        <!-- CLIENT INFORMATION -->
        <div class="border-b pb-4">
            <h2 class="text-xl font-semibold mb-4">Sale Information</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Search Client by CI/NIT -->
                <div class="md:col-span-2">
                    <div class="flex items-center justify-between mb-1">
                        <label for="SearchDocument" class="block text-sm font-semibold text-gray-700">
                            Search for Client by  CI/NIT or Reason Social
                        </label>
                        <a href="/Clients/Create"
                           class="px-4 py-1 bg-green-600 text-white text-sm rounded-lg hover:bg-green-700 flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            New Client
                        </a>
                    </div>
                    <div class="relative">
                        <input type="text" id="SearchDocument" placeholder="Enter CI/NIT or customer name"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg"
                               autocomplete="off">
                        <div id="clientSearchResults" class="absolute z-10 bg-white border border-gray-300 rounded-lg shadow-lg mt-1 max-h-60 overflow-y-auto hidden w-full">
                            <!-- Search results will appear here -->
                        </div>
                    </div>
                    <div id="searchClientError" class="text-red-600 text-sm mt-1"></div>
                    <div id="searchClientSuccess" class="text-green-600 text-sm mt-1"></div>
                </div>

                <!-- Client (Hidden but necessary for the form) -->
                <div class="md:col-span-2">
                    <label for="ClientName" class="block text-sm font-semibold text-gray-700 mb-1">
                        <span class="text-red-500">*</span> Selected Client
                    </label>
                    <div class="flex gap-2">
                        <input type="text" id="ClientName" readonly 
                               class="flex-1 px-4 py-2 border border-gray-200 rounded-lg bg-gray-50"
                               placeholder="Select a client by searching above">
                        <button type="button" id="btnClearClient" 
                                class="px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500">
                            Clear
                        </button>
                    </div>
                    <input type="hidden" id="ClientId">
                    <div id="clientError" class="text-red-600 text-sm mt-1"></div>
                </div>

                <!-- Payment Type -->
                <div>
                    <label for="PaymentType" class="block text-sm font-semibold text-gray-700 mb-1">
                        <span class="text-red-500">*</span> Payment Type
                    </label>
                    <select id="PaymentType" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="">-- Select payment type --</option>
                        <option value="Efectivo">Cash</option>
                        <option value="Tarjeta">Card</option>
                        <option value="QR">QR</option>
                        <option value="Transferencia">Transfer</option>
                    </select>
                    <div id="paymentTypeError" class="text-red-600 text-sm mt-1"></div>
                </div>
            </div>
        </div>

        <!-- PRODUCTS -->
        <div class="border-b pb-4">
            <h2 class="text-xl font-semibold mb-4">Add Products</h2>

            <!-- Product search -->
            <div class="bg-gray-50 p-4 rounded-lg mb-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="md:col-span-2">
                        <label for="SearchProduct" class="block text-sm font-semibold text-gray-700 mb-1">
                            Search Product by Description
                        </label>
                        <input type="text" id="SearchProduct" placeholder="E.g.: COLA COCA, RICE, etc." 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg"
                               autocomplete="off">
                        <div id="productSearchResults" class="absolute z-10 bg-white border border-gray-300 rounded-lg shadow-lg mt-1 max-h-60 overflow-y-auto hidden" style="width: calc(66.666% - 1rem);">
                            <!-- Search results will appear here -->
                        </div>
                    </div>
                    <div>
                        <label for="ProductQuantity" class="block text-sm font-semibold text-gray-700 mb-1">
                            Quantity
                        </label>
                        <input type="number" id="ProductQuantity" min="1" value="1" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                    </div>
                </div>

                <!-- Selected product info -->
                <div id="selectedProductInfo" class="hidden mt-4 p-3 bg-blue-50 rounded-lg">
                    <div class="grid grid-cols-3 gap-4">
                        <div>
                            <span class="text-sm text-gray-600">Product:</span>
                            <p class="font-semibold" id="selectedProductName"></p>
                        </div>
                        <div>
                            <span class="text-sm text-gray-600">Price:</span>
                            <p class="font-semibold" id="selectedProductPrice"></p>
                        </div>
                        <div>
                            <span class="text-sm text-gray-600">Available Stock:</span>
                            <p class="font-semibold" id="selectedProductStock"></p>
                        </div>
                    </div>
                    <div class="mt-3 flex justify-between items-center">
                        <div>
                            <span class="text-sm text-gray-600">Subtotal:</span>
                            <span class="text-xl font-bold text-green-600 ml-2" id="selectedProductSubtotal">Bs. 0.00</span>
                        </div>
                        <button type="button" id="btnAddProductToCart" 
                                class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                            ✓ Add to Cart
                        </button>
                    </div>
                </div>
                <div id="productError" class="text-red-600 text-sm mt-2"></div>
            </div>

            <!-- Added products list -->
            <div>
                <h3 class="font-semibold mb-2">Products in Cart</h3>
                <div id="productsList" class="space-y-3">
                    <!-- Products will be added dynamically here -->
                </div>
                <div id="productsError" class="text-red-600 text-sm mt-2"></div>
            </div>
        </div>

        <!-- SUMMARY -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h2 class="text-xl font-semibold mb-4">Sale Summary</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Subtotal</label>
                    <p id="subtotalDisplay" class="text-2xl font-bold text-gray-800">Bs. 0.00</p>
                </div>

                <div>
                    <label for="Discount" class="block text-sm font-medium text-gray-600">Discount (Bs.)</label>
                    <input type="number" id="Discount" step="0.01" min="0" value="0"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                    <div id="discountError" class="text-red-600 text-sm mt-1"></div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-600">Total to Pay</label>
                    <p id="totalDisplay" class="text-3xl font-bold text-green-600">Bs. 0.00</p>
                </div>
            </div>
        </div>

        <!-- BUTTONS -->
        <div class="flex justify-between mt-6">
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800">← Back</a>
            <button type="submit" id="btnSaveSale" class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold">
                Save Sale
            </button>
        </div>

    </form>
</div>

<!-- Notificación de éxito/error -->
<div id="notification" class="hidden fixed top-4 right-4 z-50 px-6 py-4 rounded-lg shadow-lg max-w-md">
    <div class="flex items-center gap-3">
        <div id="notificationIcon"></div>
        <div>
            <p id="notificationMessage" class="font-semibold"></p>
        </div>
        <button type="button" onclick="closeNotification()" class="ml-4 text-gray-500 hover:text-gray-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
</div>

@section Scripts {
    <script>
        // Pasar datos de productos a JavaScript
        const availableProducts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Products));
    </script>
    <script src="~/scripts/salesjs/sale-validations-simple.js"></script>
}
