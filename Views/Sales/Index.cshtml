@model IEnumerable<ProyectoWebCommercialLopez.Models.Sale>

@{
    ViewData["Title"] = "Sales";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Sales List</h1>
        <a asp-action="Create" class="px-5 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
            + New Sale
        </a>
    </div>

    <!-- FILTERS -->
    <div class="bg-white p-4 rounded-xl shadow mb-6">
        <h3 class="font-semibold mb-3">Filter Sales</h3>
        <form id="filterForm" method="get" asp-action="Index">
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
                    <input type="date" name="fechaDesde" value="@ViewBag.FechaDesde" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                    <input type="date" name="fechaHasta" value="@ViewBag.FechaHasta" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Client</label>
                    <div class="relative">
                        <input type="text" id="searchClientFilter" placeholder="Search by ID or name" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
                               autocomplete="off">
                        <input type="hidden" name="clienteId" id="clienteIdFilter" value="@ViewBag.ClienteId">
                        <div id="clientFilterResults" class="absolute z-10 bg-white border border-gray-300 rounded-lg shadow-lg mt-1 max-h-60 overflow-y-auto hidden w-full">
                            <!-- Search results will appear here -->
                        </div>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select name="estado" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
                        <option value="">All</option>
                        <option value="Completada" selected="@(ViewBag.Estado == "Completada")">Completed</option>
                        <option value="Anulado" selected="@(ViewBag.Estado == "Anulado")">Cancelled</option>
                    </select>
                </div>
                <div class="flex items-end gap-2">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
                        üîç Search
                    </button>
                    <a href="@Url.Action("Index")" class="px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500 text-sm">
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- STATISTICS -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Sales</div>
            <div class="text-2xl font-bold">@Model.Count()</div>
        </div>
        <div class="bg-gradient-to-r from-green-500 to-green-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Amount</div>
            <div class="text-2xl font-bold">Bs. @Model.Sum(s => s.Total).ToString("N2")</div>
        </div>
        <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Sales Today</div>
            <div class="text-2xl font-bold">@Model.Count(s => s.SaleDate.Date == DateTime.Today)</div>
        </div>
        <div class="bg-gradient-to-r from-purple-500 to-purple-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Income Today</div>
            <div class="text-2xl font-bold">Bs. @Model.Where(s => s.SaleDate.Date == DateTime.Today).Sum(s => s.Total).ToString("N2")</div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sale Number</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payment</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issued By</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                            #@item.Id
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.SaleDate.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @item.Client?.CompanyName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                            Bs. @item.Total.ToString("N2")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.PaymentType
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (item.Status == "Anulado")
                            {
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                    ‚ùå Cancelled
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    ‚úì Completed
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @(item.CreatedByUser?.Person?.Name ?? "N/A")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                            <a asp-action="Details" asp-route-id="@item.Id" 
                               class="inline-flex items-center gap-1 px-3 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200 mr-2" 
                               title="View details">
                                <i class="fas fa-eye"></i>
                                <span class="text-xs font-semibold">View Details</span>
                            </a>
                            <a asp-action="PrintReceipt" asp-route-id="@item.Id" 
                               class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded hover:bg-green-200 mr-2" 
                               title="Print" target="_blank">
                                <i class="fas fa-print"></i>
                                <span class="text-xs font-semibold">Print</span>
                            </a>
                            @if (item.Status != "Anulado")
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                   class="inline-flex items-center gap-1 px-3 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200" 
                                   title="Cancel">
                                    <i class="fas fa-trash"></i>
                                    <span class="text-xs font-semibold">Cancel</span>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Buscador de clientes en filtro
        const searchClientFilter = document.getElementById('searchClientFilter');
        const clientFilterResults = document.getElementById('clientFilterResults');
        const clienteIdFilter = document.getElementById('clienteIdFilter');

        // Si hay un cliente seleccionado, mostrar su nombre
        if (clienteIdFilter.value) {
            const selectedClientId = clienteIdFilter.value;
            fetch(`/Clients/Details/${selectedClientId}`)
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const companyName = doc.querySelector('.company-name')?.textContent || 'Cliente seleccionado';
                    searchClientFilter.value = companyName;
                });
        }

        searchClientFilter.addEventListener('input', async function() {
            const searchTerm = this.value.trim();
            
            if (searchTerm.length < 2) {
                clientFilterResults.classList.add('hidden');
                clientFilterResults.innerHTML = '';
                clienteIdFilter.value = '';
                return;
            }
            
            try {
                const response = await fetch(`/Clients/SearchClients?search=${encodeURIComponent(searchTerm)}`);
                
                if (response.ok) {
                    const clients = await response.json();
                    
                    if (clients.length === 0) {
                        clientFilterResults.innerHTML = '<div class="p-3 text-gray-500 text-sm">No se encontraron clientes</div>';
                        clientFilterResults.classList.remove('hidden');
                        return;
                    }
                    
                    clientFilterResults.innerHTML = '';
                    clients.forEach(client => {
                        const div = document.createElement('div');
                        div.className = 'p-3 hover:bg-gray-100 cursor-pointer border-b border-gray-200';
                        div.innerHTML = `
                            <div class="font-semibold">${client.companyName}</div>
                            <div class="text-sm text-gray-600">CI/NIT: ${client.documentNumber}</div>
                        `;
                        div.addEventListener('click', function() {
                            searchClientFilter.value = client.companyName;
                            clienteIdFilter.value = client.id;
                            clientFilterResults.classList.add('hidden');
                        });
                        clientFilterResults.appendChild(div);
                    });
                    
                    clientFilterResults.classList.remove('hidden');
                }
            } catch (error) {
                console.error('Error al buscar clientes:', error);
            }
        });

        // Cerrar resultados al hacer clic fuera
        document.addEventListener('click', function(e) {
            if (!searchClientFilter.contains(e.target) && !clientFilterResults.contains(e.target)) {
                clientFilterResults.classList.add('hidden');
            }
        });
    </script>
}

