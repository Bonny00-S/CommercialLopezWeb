@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Commercial Lopez</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#1a1a1a] flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-md bg-[#2a2a2a] shadow-2xl rounded-2xl p-8 border border-gray-700">

        <!-- Título -->
        <h2 class="text-3xl font-bold text-center text-white mb-6 tracking-wide">
            Commercial López
        </h2>

        <!-- Mensaje de error -->
        @if (ViewBag.Error != null)
        {
            <div class="bg-red-500 bg-opacity-20 text-red-300 border border-red-500 px-4 py-3 rounded-lg mb-4 text-center">
                @ViewBag.Error
            </div>
        }

        <!-- Formulario -->
        <form method="post" class="space-y-5">

            <!-- Usuario -->
            <div>
                <label class="block text-gray-300 font-medium mb-1">Username</label>
                <input type="text" name="UserName"
                       class="w-full px-4 py-2 bg-[#3a3a3a] text-white border border-gray-600 rounded-lg
                              focus:ring-2 focus:ring-orange-500 focus:outline-none"
                       placeholder="Enter your username" required />
            </div>

            <!-- Contraseña -->
            <div>
                <label class="block text-gray-300 font-medium mb-1">Password</label>
                <input type="password" name="Password"
                       class="w-full px-4 py-2 bg-[#3a3a3a] text-white border border-gray-600 rounded-lg
                              focus:ring-2 focus:ring-orange-500 focus:outline-none"
                       placeholder="Enter your password" required />
            </div>

            <!-- Olvidé mi contraseña -->
            <div class="text-right">
                <a asp-action="ResetPassword" class="text-orange-400 text-sm hover:text-orange-300 transition">
                    Forgot my password
                </a>
            </div>

            <!-- Botón login -->
            <button type="submit"
                    class="w-full bg-orange-500 text-white py-2 rounded-lg font-semibold
                           hover:bg-orange-600 transition shadow-lg">
                Sign In
            </button>

        </form>

    </div>

</body>
</html>
