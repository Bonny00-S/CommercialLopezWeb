@{
    bool isAdmin = User.IsInRole("Admin");
    bool isCashier = User.IsInRole("Cashier");
    bool isAlmacen = User.IsInRole("Almacen");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewData["Title"] - CLS</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        .sidebar-transition {
            transition: width 0.3s ease-in-out;
        }

        /* Cuando el sidebar está colapsado */
        #sidebar.collapsed {
            width: 80px !important;
            overflow: hidden !important;
        }

            #sidebar.collapsed .menu-text {
                display: none !important;
            }

            #sidebar.collapsed .submenu {
                display: none !important;
            }
    </style>
</head>

<body class="bg-gray-100 text-gray-900">

    <div class="flex min-h-screen">

        <!-- SIDEBAR -->
        <aside id="sidebar"
               class="sidebar-transition bg-white border-r border-gray-300 shadow-lg w-64">

            <!-- HEADER -->
            <div class="flex items-center justify-between p-5 border-b border-gray-200">
                <h2 id="logoText" class="text-2xl font-bold text-orange-500">
                    CLS System
                </h2>

                <!-- Botón colapsar -->
                <button id="toggleSidebar" class="text-gray-700 hover:text-orange-500">
                    <i class="bi bi-list text-2xl"></i>
                </button>
            </div>

            <!-- MENU -->
            <nav class="px-4 py-6 text-lg font-medium space-y-4">

                <!-- ADMIN -->
                @if (isAdmin)
                {
                    <!-- USERS -->
                    <a class="flex items-center gap-3 hover:text-orange-500 transition"
                       asp-controller="People" asp-action="Index">
                        <i class="bi bi-people text-xl"></i>
                        <span class="menu-text">Users</span>
                    </a>

                    <!-- PRODUCTS (Submenu) -->
                    <div>
                        <button onclick="toggleSubMenu('productsSub')"
                                class="flex items-center justify-between w-full hover:text-orange-500 transition">
                            <div class="flex items-center gap-3">
                                <i class="bi bi-box-seam text-xl"></i>
                                <span class="menu-text">Products</span>
                            </div>
                            <i class="bi bi-chevron-down text-xl submenu-arrow"></i>
                        </button>

                        <div id="productsSub" class="submenu ml-10 mt-2 hidden space-y-3 text-base text-gray-600">

                            <a asp-controller="Products" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-box"></i> Products List
                            </a>

                            <a asp-controller="Categories" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-tags"></i> Categories
                            </a>

                            <a asp-controller="Warehouses" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-building"></i> Warehouse
                            </a>

                            <a asp-controller="Suppliers" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-truck"></i> Suppliers
                            </a>

                            <a asp-controller="Products" asp-action="Reports"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-graph-up"></i> Reports
                            </a>
                        </div>
                    </div>

                    <!-- SALES (Submenu) -->
                    <div>
                        <button onclick="toggleSubMenu('salesSub')"
                                class="flex items-center justify-between w-full hover:text-orange-500 transition">
                            <div class="flex items-center gap-3">
                                <i class="bi bi-cash-stack text-xl"></i>
                                <span class="menu-text">Sales</span>
                            </div>
                            <i class="bi bi-chevron-down text-xl submenu-arrow"></i>
                        </button>

                        <div id="salesSub" class="submenu ml-10 mt-2 hidden space-y-3 text-base text-gray-600">

                            <a asp-controller="Sales" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-cart-check"></i> Sales List
                            </a>

                            <a asp-controller="Sales" asp-action="Reports"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-bar-chart"></i> Reports
                            </a>
                        </div>
                    </div>
                }

                <!-- CASHIER -->
                @if (isCashier)
                {
                    <div>
                        <button onclick="toggleSubMenu('cashierSalesSub')"
                                class="flex items-center justify-between w-full hover:text-orange-500 transition">
                            <div class="flex items-center gap-3">
                                <i class="bi bi-cash-stack text-xl"></i>
                                <span class="menu-text">Sales</span>
                            </div>
                            <i class="bi bi-chevron-down text-xl submenu-arrow"></i>
                        </button>

                        <div id="cashierSalesSub" class="submenu ml-10 mt-2 hidden space-y-3 text-base text-gray-600">

                            <a asp-controller="Sales" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-cart-check"></i> Sales List
                            </a>

                            <a asp-controller="Sales" asp-action="Reports"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-bar-chart"></i> Reports
                            </a>
                        </div>
                    </div>
                }

                <!-- WAREHOUSE -->
                @if (isAlmacen)
                {
                    <div>
                        <button onclick="toggleSubMenu('almacenProductsSub')"
                                class="flex items-center justify-between w-full hover:text-orange-500 transition">
                            <div class="flex items-center gap-3">
                                <i class="bi bi-box-seam text-xl"></i>
                                <span class="menu-text">Products</span>
                            </div>
                            <i class="bi bi-chevron-down text-xl submenu-arrow"></i>
                        </button>

                        <div id="almacenProductsSub" class="submenu ml-10 mt-2 hidden space-y-3 text-base text-gray-600">

                            <a asp-controller="Products" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-box"></i> Products List
                            </a>

                            <a asp-controller="Warehouses" asp-action="Index"
                               class="flex items-center gap-2 hover:text-orange-500 transition">
                                <i class="bi bi-building"></i> Warehouse
                            </a>
                        </div>
                    </div>
                }

                <hr class="my-4" />

                <!-- LOGOUT -->
                <a asp-controller="Auth" asp-action="Logout"
                   class="flex items-center gap-3 text-red-500 hover:text-red-700 transition">
                    <i class="bi bi-box-arrow-right text-xl"></i>
                    <span class="menu-text">Logout</span>
                </a>
            </nav>

        </aside>

        <!-- CONTENT -->
        <main class="flex-1 p-10">
            @RenderBody()
        </main>

    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- SCRIPT FINAL -->
    <script>
        const sidebar = document.getElementById("sidebar");
        const toggle = document.getElementById("toggleSidebar");
        const logoText = document.getElementById("logoText");
        const menuTexts = document.querySelectorAll(".menu-text");
        const submenus = document.querySelectorAll(".submenu");

        let collapsed = false;

        toggle.addEventListener("click", () => {
            collapsed = !collapsed;

            if (collapsed) {
                sidebar.classList.add("collapsed");
                logoText.style.display = "none";
            }
            else {
                sidebar.classList.remove("collapsed");
                logoText.style.display = "block";
            }
        });

        function toggleSubMenu(id) {
            const sub = document.getElementById(id);
            sub.classList.toggle("hidden");
        }
    </script>

</body>
</html>
