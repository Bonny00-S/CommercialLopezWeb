@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Top Selling Products";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">üèÜ Top Selling Products</h1>
        <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- FILTERS -->
    <div class="bg-white p-4 rounded-xl shadow mb-6">
        <form method="get" asp-action="TopSellingProducts" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
                <input type="date" name="fechaDesde" value="@ViewBag.FechaDesde" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                <input type="date" name="fechaHasta" value="@ViewBag.FechaHasta" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="flex items-end gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    üîç Filter
                </button>
                <a asp-action="TopSellingProductsPdf" asp-route-fechaDesde="@ViewBag.FechaDesde" asp-route-fechaHasta="@ViewBag.FechaHasta"
                   class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" target="_blank">
                    üìÑ Export PDF
                </a>
            </div>
        </form>
    </div>

    <!-- PRODUCTS TABLE -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ranking</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantity Sold</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total Sales</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @{ int ranking = 1; }
                @foreach (var item in Model)
                {
                    string badgeClass = ranking <= 3 ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800";
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <span class="px-3 py-1 text-xs font-semibold rounded-full @badgeClass">
                                #@ranking
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">
                            @item.Producto
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="font-semibold text-blue-600">@item.CantidadVendida</span> units
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                            Bs. @item.TotalVentas.ToString("N2")
                        </td>
                    </tr>
                    ranking++;
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                <p class="text-lg">No products sold found in the selected period.</p>
            </div>
        }
    </div>
</div>
