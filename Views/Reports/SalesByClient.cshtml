@model IEnumerable<ProyectoWebCommercialLopez.Models.Sale>

@{
    ViewData["Title"] = "Sales by Client";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">üë• Sales by Client</h1>
        <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- FILTER BY CLIENT -->
    <div class="bg-white p-4 rounded-xl shadow mb-6">
        <form method="get" asp-action="SalesByClient" class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Select Client</label>
                <select name="clientId" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">All Clients</option>
                    @foreach (var client in ViewBag.Clients ?? new List<dynamic>())
                    {
                        <option value="@client.Id" selected="@(ViewBag.ClientId == client.Id)">@client.CompanyName</option>
                    }
                </select>
            </div>
            <div class="flex items-end gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    üîç Filter
                </button>
                <a asp-action="SalesByClientPdf" asp-route-clientId="@ViewBag.ClientId"
                   class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" target="_blank">
                    üìÑ Export PDF
                </a>
            </div>
        </form>
    </div>

    <!-- STATISTICS -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Purchases</div>
            <div class="text-2xl font-bold">@Model.Count()</div>
        </div>
        <div class="bg-gradient-to-r from-green-500 to-green-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Spent</div>
            <div class="text-2xl font-bold">Bs. @Model.Sum(s => s.Total).ToString("N2")</div>
        </div>
        <div class="bg-gradient-to-r from-purple-500 to-purple-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Last Purchase</div>
            <div class="text-xl font-bold">@(Model.Any() ? Model.Max(s => s.SaleDate).ToString("dd/MM/yyyy") : "N/A")</div>
        </div>
    </div>

    <!-- SALES TABLE -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payment</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Products</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                            #@item.Id
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.SaleDate.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @item.Client?.CompanyName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                            Bs. @item.Total.ToString("N2")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.PaymentType
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.SaleDetails.Count() item(s)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                <p class="text-lg">No sales found for this client.</p>
            </div>
        }
    </div>
</div>
