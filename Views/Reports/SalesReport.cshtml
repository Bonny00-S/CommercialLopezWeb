@model IEnumerable<ProyectoWebCommercialLopez.Models.Sale>

@{
    ViewData["Title"] = "Sales Report";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">üìä Sales Report</h1>
        <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- FILTERS -->
    <div class="bg-white p-4 rounded-xl shadow mb-6">
        <form method="get" asp-action="SalesReport" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
                <input type="date" name="fechaDesde" value="@ViewBag.FechaDesde" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                <input type="date" name="fechaHasta" value="@ViewBag.FechaHasta" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="flex items-end gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    üîç Filter
                </button>
                <a asp-action="SalesReportPdf" asp-route-fechaDesde="@ViewBag.FechaDesde" asp-route-fechaHasta="@ViewBag.FechaHasta"
                   class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" target="_blank">
                    üìÑ Export PDF
                </a>
            </div>
        </form>
    </div>

    <!-- SUMMARY STATISTICS -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Sales</div>
            <div class="text-2xl font-bold">@Model.Count()</div>
        </div>
        <div class="bg-gradient-to-r from-green-500 to-green-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Total Amount</div>
            <div class="text-2xl font-bold">Bs. @Model.Sum(s => s.Total).ToString("N2")</div>
        </div>
        <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Average per Sale</div>
            <div class="text-2xl font-bold">Bs. @(Model.Any() ? Model.Average(s => s.Total).ToString("N2") : "0.00")</div>
        </div>
        <div class="bg-gradient-to-r from-purple-500 to-purple-600 p-4 rounded-xl shadow text-white">
            <div class="text-sm opacity-90">Products Sold</div>
            <div class="text-2xl font-bold">@Model.Sum(s => s.SaleDetails.Sum(sd => sd.Quantity))</div>
        </div>
    </div>

    <!-- SALES TABLE -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payment</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issued By</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Products</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                            #@item.Id
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.SaleDate.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @item.Client?.CompanyName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                            Bs. @item.Total.ToString("N2")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.PaymentType
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (item.Status == "Anulado")
                            {
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                    ‚ùå Cancelled
                                </span>
                            }
                            else
                            {
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    ‚úì Completed
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @(item.CreatedByUser?.Person?.Name ?? "N/A")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.SaleDetails.Count() item(s)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500">
                <p class="text-lg">No sales found in the selected period.</p>
            </div>
        }
    </div>
</div>
