@model ProyectoWebCommercialLopez.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h1 class="text-3xl font-bold text-red-600 mb-2">Delete Supplier</h1>

<p class="text-gray-700 mb-4">
    Are you sure you want to delete this supplier?
</p>

<p class="text-red-500 font-semibold mb-6">
    ⚠ Warning: Deleting this supplier will also remove all products associated with them.
</p>

<div class="max-w-2xl bg-white p-6 rounded-xl shadow border border-gray-200">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Supplier Information</h2>

    <dl class="divide-y divide-gray-200">

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">Business Name</dt>
            <dd class="col-span-2 text-gray-900">@Model.RazonSocial</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">NIT</dt>
            <dd class="col-span-2 text-gray-900">@Model.NIT</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">Phone</dt>
            <dd class="col-span-2 text-gray-900">@Model.Phone</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">Email</dt>
            <dd class="col-span-2 text-gray-900">@Model.Email</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">Address</dt>
            <dd class="col-span-2 text-gray-900">@Model.Address</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">City</dt>
            <dd class="col-span-2 text-gray-900">@Model.City</dd>
        </div>

        <div class="py-4 grid grid-cols-3">
            <dt class="text-sm font-medium text-gray-600">Country</dt>
            <dd class="col-span-2 text-gray-900">@Model.Country</dd>
        </div>

    </dl>

    <form asp-action="Delete" class="mt-6 flex justify-between items-center">
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index"
           class="text-gray-600 hover:text-gray-800 transition">
            ← Back
        </a>

        <button type="submit"
                class="px-5 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition">
            Delete
        </button>
    </form>
</div>
