@model IEnumerable<ProyectoWebCommercialLopez.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h1 class="text-2xl font-bold mb-6">Suppliers</h1>

<div class="mb-4">
    <a asp-action="Create"
       class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Add Supplier
    </a>
</div>

<div class="overflow-x-auto bg-white shadow rounded-lg">
    <table class="min-w-full text-sm text-gray-700">
        <thead class="bg-gray-100 text-gray-800 uppercase text-xs">
            <tr>
                <th class="px-4 py-3 text-left">Razon Social</th>
                <th class="px-4 py-3 text-left">NIT</th>
                <th class="px-4 py-3 text-left">Phone</th>
                <th class="px-4 py-3 text-left">Email</th>
                <th class="px-4 py-3 text-left">Address</th>
                <th class="px-4 py-3 text-left">City</th>
                <th class="px-4 py-3 text-left">Country</th>
                <th class="px-4 py-3 text-left">State</th>
               
                <th class="px-4 py-3 text-center">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="px-4 py-3">@item.RazonSocial</td>
                    <td class="px-4 py-3">@item.NIT</td>
                    <td class="px-4 py-3">@item.Phone</td>
                    <td class="px-4 py-3">@item.Email</td>
                    <td class="px-4 py-3">@item.Address</td>
                    <td class="px-4 py-3">@item.City</td>
                    <td class="px-4 py-3">@item.Country</td>
                    <td class="px-4 py-3">
                        @if (item.State == 1)
                        {
                            <span class="text-green-600 font-bold">Active</span>
                        }
                        else
                        {
                            <span class="text-red-600 font-bold">Inactive</span>
                        }
                    </td>
                   

                    <td class="px-4 py-3 text-center space-x-2">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="text-blue-600 hover:underline">Edit</a>

                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="text-gray-700 hover:underline">Details</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="text-red-600 hover:underline">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
